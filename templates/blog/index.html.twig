{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>COUCOU LES GENS !!!!</h1>
    <p>Age : {{ age }}</p>
    {% if age > 18 %}
    <p>Vous êtes majeur !</p>
    {% else %}
    <p>Vous êtes mineur !</p>
    {% endif %}
</div>
{% endblock %}